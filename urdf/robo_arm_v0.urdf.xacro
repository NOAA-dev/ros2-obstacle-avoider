<?xml version="1.0"?>
<robot name="my_robo_v0" xmlns:xacro="https://www.ros.org/wiki/xacro">

    <!-- <xacro:include filename="materials.xacro" />
    <xacro:include filename="inertia_descriptions.xacro" />
    <xacro:include filename="arm_gazebo_plugins.xacro" /> -->

    <link name="base_footprint"/>

    <link name="arm_base">
        <visual>
            <geometry>
                <box size="0.1 0.1 0.02" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <material name="grey" />
        </visual>
        <collision>
            <geometry>
                <box size="0.1 0.1 0.02" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </collision>
        <xacro:box_inertia Mass="5.5" x="0.1" y="0.1" z="0.02" arr_xyz="0 0 0" arr_rpy="0 0 0"/>
    </link>

    <link name="arm_link1">
        <visual>
            <geometry>
                <cylinder radius="0.02" length="0.3" />
            </geometry>
            <origin xyz="0 0 0.15" rpy="0 0 0" />
            <material name="green" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.02" length="0.3" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </collision>
        <xacro:cylinder_inertia Mass="0.01" r="0.02" h="0.3" arr_xyz="0 0 0" arr_rpy="0 0 0"/>
    </link>

    <link name="arm_link2">
        <visual>
            <geometry>
                <cylinder radius="0.02" length="0.3" />
            </geometry>
            <origin xyz="0 0 0.15" rpy="0 0 0" />
            <material name="red" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.02" length="0.3" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </collision>
        <xacro:cylinder_inertia Mass="0.01" r="0.02" h="0.3" arr_xyz="0 0 0" arr_rpy="0 0 0"/>
    </link>

    <joint name="base_footprint_to_arm_base" type="fixed">
        <parent link="base_footprint"/>
        <child link="arm_base"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <joint name="base_link1_joint" type="revolute">
        <parent link="arm_base"/>
        <child link="arm_link1"/>
        <origin xyz="0 0 0.01" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit lower="${-pi/2}" upper="${pi/2}" effort="100.0" velocity="100.0"/>
        <dynamics damping="0.3" friction="0.2"/>
    </joint>

    <joint name="link1_link2_joint" type="revolute">
        <parent link="arm_link1"/>
        <child link="arm_link2"/>
        <origin xyz="0 0 0.3" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit lower="${-pi/2}" upper="${pi/2}" effort="100.0" velocity="100.0"/>
        <dynamics damping="0.3" friction="0.2"/>
    </joint>

    <joint name="base_link_robo_arm_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz="0 0 0.21" rpy="0 0 0"/>
    </joint>

</robot>