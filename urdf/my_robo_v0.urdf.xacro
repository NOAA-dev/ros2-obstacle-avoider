<?xml version="1.0"?>
<robot name="my_robo_v0" xmlns:xacro="https://www.ros.org/wiki/xacro">

    <xacro:include filename="materials.xacro" />
    <xacro:include filename="inertia_descriptions.xacro" />
    <xacro:include filename="gazebo_plugin.xacro" />
    <xacro:include filename="camera.xacro" />
    <xacro:include filename="robo_arm_v0.urdf.xacro" />
    <xacro:include filename="arm_gazebo_plugins.xacro" />
    <xacro:include filename="lidar.xacro" />

    <link name="base_shadow">
    </link>

    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.6 0.4 0.2" />
            </geometry>
            <origin xyz="0 0 0.1" rpy="0 0 0" />
            <material name="blue" />
        </visual>
        <collision>
            <geometry>
                <box size="0.6 0.4 0.2" />
            </geometry>
            <origin xyz="0 0 0.1" rpy="0 0 0" />
        </collision>
        <xacro:box_inertia Mass="5.0" x="0.6" y="0.4" z="0.2" arr_xyz="0 0 0.1" arr_rpy="0 0 0" />
    </link>

    <xacro:macro name="wheel" params="params">
        <link name="${params}">
            <visual>
                <geometry>
                    <cylinder radius="0.1" length="0.02" />
                </geometry>
                <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
                <material name="grey"/>
            </visual>
            <collision>
                <geometry>
                    <sphere radius="0.1"/>
                </geometry>
                <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
            </collision>
            <xacro:cylinder_inertia Mass="1.0" r="0.1" h="0.02" arr_xyz="0 0 0" arr_rpy="${pi/2} 0 0"/>
        </link>
    </xacro:macro>
    
    <xacro:wheel params="right_wheel" />
    <xacro:wheel params="left_wheel" />


    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="grey"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </collision>
        <xacro:solid_sphere_inertia Mass="0.5" r="0.05" arr_xyz="0 0 0" arr_rpy="0 0 0"/> 
    </link>

    <joint name="base_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="-0.15 -0.21 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <joint name="base_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="-0.15 0.21 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <joint name="base_caster_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster_wheel"/>
        <origin xyz="0.15 0 -0.05" rpy="0 0 0"/>
    </joint>


    <joint name="baseshadow_object_joint" type="fixed">
        <parent link="base_shadow"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.1" rpy="0 0 0"/>
    </joint>
    
</robot>